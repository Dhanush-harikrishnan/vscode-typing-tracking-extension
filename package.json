{
  "name": "vscode-typing-tracker",
  "displayName": "VS Code Typing Activity Logger",
  "description": "Track typing activity, distinguish typed vs copied lines, and analyze coding productivity",
  "version": "1.0.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Typing Activity Logger",
      "properties": {
        "typingTracker.username": {
          "type": "string",
          "default": "",
          "description": "Your username for activity tracking"
        },
        "typingTracker.apiEndpoint": {
          "type": "string",
          "default": "http://localhost:3000/api",
          "description": "Backend API endpoint URL"
        },
        "typingTracker.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable activity tracking"
        },
        "typingTracker.trackContentSnippets": {
          "type": "boolean",
          "default": false,
          "description": "Include code snippets in logs (privacy setting)"
        },
        "typingTracker.debounceInterval": {
          "type": "number",
          "default": 2000,
          "description": "Milliseconds to wait before sending data to backend"
        }
      }
    },
    "commands": [
      {
        "command": "typingTracker.showStats",
        "title": "Typing Tracker: Show Today's Statistics"
      },
      {
        "command": "typingTracker.toggleTracking",
        "title": "Typing Tracker: Toggle Tracking"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "format": "prettier --write \"src/**/*.ts\" \"server/**/*.ts\""
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.5"
  }
}
